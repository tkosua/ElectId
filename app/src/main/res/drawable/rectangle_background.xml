<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- rounded corners -->
    <corners
        android:radius="@dimen/margin10" />

    <padding
        android:left="@dimen/margin10"
        android:top="@dimen/margin10"
        android:right="@dimen/margin10"
        android:bottom="@dimen/margin10" />

    <!-- background colour fill -->
    <solid
        android:color="@color/colorAccent" />

    <!-- reference to outline of shape -->
    <stroke
        android:width="@dimen/margin3"
        android:color="@color/colorSilver" />

</shape>